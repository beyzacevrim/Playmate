@model IEnumerable<Playmate.Models.Classes.Product>

@{
    Layout = null;
    var newArrivals = ViewBag.NewArrivals as IEnumerable<Playmate.Models.Classes.Product>;
}

<!DOCTYPE html>
<html lang="en">
<head>
    @Html.AntiForgeryToken()
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>e-commerce website</title>

    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" />
    <link rel="stylesheet" href="@Url.Content("~/website/style.css")">
</head>
<body>

    <section id="header">
        <a href="#"><img src="@Url.Content("~/wwwroot/image/logo.png")" class="logo" alt=""></a>
        <div>
            <ul id="navbar">
                <li><a class="active" href="@Url.Action("Index", "Home")">Home</a></li>
                <li><a href="@Url.Action("Index", "Shop")">Shop</a></li>
                <li><a href="@Url.Action("Index", "User")">Profil</a></li>
                <li><a href="@Url.Action("About", "Home")">About</a></li>
                <li><a href="@Url.Action("Index", "Favoriler")">Favoriler</a></li>
                <li id="lg-bag"><a href="@Url.Action("Index", "Basket")"><i class="far fa-shopping-bag"></i></a></li>
                <a href="#" id="close"><i class="far fa-times"></i></a>
            </ul>
        </div>
        <div id="mobile">
            <a href="cart.html"><i class="far fa-shopping-bag"></i></a>
            <i id="bar" class="fas fa-outdent"></i>
        </div>
    </section>

    <section id="hero">
        <h2>Destek Ol, Umut Ol</h2>
        <h1>Her bağış bir hayatı değiştirebilir</h1>
        <p>Kampanyalarımıza katıl, birlikte daha fazlasını başaralım.</p>
        <button>Şimdi Bağış Yap!</button>
    </section>

    <section id="feature" class="section-p1">
        <div class="fe-box">
            <img src="@Url.Content("~/wwwroot/image/f1.png")" alt="">
            <h6>Free Shipping</h6>
        </div>
        <div class="fe-box">
            <img src="@Url.Content("~/wwwroot/image/f2.png")" alt="">
            <h6>Online Order</h6>
        </div>
        <div class="fe-box">
            <img src="@Url.Content("~/wwwroot/image/f3.png")" alt="">
            <h6>Save Money</h6>
        </div>
        <div class="fe-box">
            <img src="@Url.Content("~/wwwroot/image/f4.png")" alt="">
            <h6>Promotions</h6>
        </div>
    </section>

    <section id="product1" class="section-p1">
        <h2>Öne Çıkan Ürünler</h2>
        <div class="pro-container">
            @if (Model != null && Model.Any())
            {
                foreach (var product in Model)
                {
                    <a href="@Url.Action("Details", "Product", new { id = product.ProductId })" style="text-decoration:none; color:inherit;">
                        <div class="pro">
                            <img src="@Url.Content("~/wwwroot/" + product.ProductImage)" alt="@product.ProductName" />
                            <div class="des">
                                <span>@(product.User?.FullName ?? "Bağışçı")</span>
                                <h5>@product.ProductName</h5>
                                <h4>Bağış</h4>
                            </div>
                            <a href="#"><i class="fas fa-shopping-cart cart"></i></a>
                        </div>
                    </a>
                }
            }
            else
            {
                <p>Gösterilecek öne çıkan ürün bulunamadı.</p>
            }
        </div>
    </section>

    <section id="banner" class="section-m1">
        <h4>Küçük Bir Adım, Büyük Bir Değişim</h4>
        <h2> Tüm Kategorilerde %100 İyilik </h2>
        <button class="normal">Şimdi Bağış Yap</button>
    </section>

    <section id="product1" class="section-p1">
        <h2>Yeni Gelenler</h2>
        <div class="pro-container">
            @if (newArrivals != null && newArrivals.Any())
            {
                foreach (var product in newArrivals) 
                {
                    <a href="@Url.Action("Details", "Product", new { id = product.ProductId })" style="text-decoration:none; color:inherit;">
                        <div class="pro" data-product-id="@product.ProductId">
                            <img src="@Url.Content("~/wwwroot/" + product.ProductImage)" alt="@product.ProductName">
                            <div class="des">
                                <span>@(product.User?.FullName ?? "Bağışçı")</span>
                                <h5>@product.ProductName</h5>
                                <h4>Bağış</h4>
                            </div>
                            <a href="#"><i class="fas fa-shopping-cart cart"></i></a>
                            <a href="#" class="toggle-favorite">
                                <i class="far fa-heart heart-icon"></i>
                            </a>
                        </div>
                    </a>
                }
            }
            else
            {
                <p>Yeni gelen ürün bulunamadı.</p>
            }
        </div>
    </section>

    <footer class="section-p1">
        <div class="col">
            <img class="logo" src="@Url.Content("~/wwwroot/image/logo.png")" alt="">
            <h4>İletişim</h4>
            <p><strong>Adres:</strong> Türkiye, Zonguldak - 67000 </p>
            <p><strong>Telefon:</strong> 0536 225 36 34</p>
            <div class="follow">
                <h4>Bizi Takip Edin</h4>
                <div class="icon">
                    <i class="fab fa-facebook-f"></i>
                    <i class="fab fa-twitter"></i>
                    <i class="fab fa-instagram"></i>
                    <i class="fab fa-pinterest-p"></i>
                    <i class="fab fa-youtube"></i>
                </div>
            </div>
        </div>
        <div class="col">
            <h4>Hakkında</h4>
            <a href="#">Hakkımızda</a>
            <a href="#">Teslimat Bilgileri</a>
            <a href="#">Gizlilik Politikası</a>
            <a href="#">Şartlar ve Koşullar</a>
            <a href="#">Bize Ulaşın</a>
        </div>
        <div class="col">
            <h4>Hesabım</h4>
            <a href="#">Oturum Aç</a>
            <a href="#">Sepeti Görüntüle</a>
            <a href="#">Favorilerim</a>
            <a href="#">Bağışımı Takip Et</a>
            <a href="#">Yardım</a>
        </div>
        <div class="copyright">
            <p>Tüm Hakları Saklıdır | &#169; 2023</p>
        </div>
    </footer>

    <script>
    const addFavoriteUrl = '@Url.Action("AddFavorite", "Favoriler")';
    const removeFavoriteUrl = '@Url.Action("RemoveFavorite", "Favoriler")';
    const requestVerificationToken = document.querySelector('input[name="__RequestVerificationToken"]')?.value;
    const initialFavoritedProductIds = @Html.Raw(Json.Encode(ViewBag.FavoritedProductIds ?? new List < int > ()));
    </script>
    <script src="@Url.Content("~/website/script.js")"></script>
</body>
</html>