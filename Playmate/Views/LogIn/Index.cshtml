@{
    ViewBag.Title = "Index";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Profil</title>
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" />
    <link rel="stylesheet" href="@Url.Content("~/website/style.css")">
</head>
<body>

    <section id="header">
        <a href="#"><img src="@Url.Content("~/wwwroot/image/logo.png")" class="logo" alt=""></a>
        <div>
            <ul id="navbar">
                <li><a href="@Url.Action("Index", "Home")">Home</a></li>
                <li><a href="shop.html">Shop</a></li>
                <li><a class="active" href="@Url.Action("Index", "User")">Profil</a></li>
                <li><a href="@Url.Action("About", "Home")">About</a></li>
                <li><a href="@Url.Action("Index", "Favoriler")">Favoriler</a></li>
                <li id="lg-bag"><a href="@Url.Action("Index", "Basket")"><i class="far fa-shopping-bag"></i></a></li>
                <a href="#" id="close"><i class="far fa-times"></i></a>
            </ul>
        </div>
        <div id="mobile">
            <a href="cart.html"><i class="far fa-shopping-bag"></i></a>
            <i id="bar" class="fas fa-outdent"></i>
        </div>
    </section>

    <div class="login">
        <div class="container">
            <div class="login-section">
                <h2 class="title">Giriş Yap</h2>
                <p class="subtitle">Tekrar hoş geldiniz! Lütfen bilgilerinizi girin.</p>

                @if (ViewBag.Error != null)
                {
                    <div style="color: red; margin-bottom: 20px; font-size: 0.9em;">
                        @ViewBag.Error
                    </div>
                }

                <form class="login-form" action="@Url.Action("Index", "LogIn")" method="post">
                    <div class="input-group">
                        <label for="email">E-posta</label>
                        <input type="email" id="email" name="email" placeholder="E-posta adresinizi girin">
                    </div>
                    <div class="input-group">
                        <label for="password">Şifre</label>
                        <div class="password-input-wrapper">
                            <input type="password" id="password" name="password" placeholder="Şifrenizi girin">
                            <i class="fas fa-eye"></i>
                        </div>
                    </div>
                    <a href="#" class="forgot-password">Şifrenizi mi unuttunuz?</a>
                    <button type="submit" class="login-button">Giriş Yap</button>
                </form>

                <div class="divider">
                    <span>Veya ile devam et</span>
                </div>

                <div class="social-login">
                    <button class="social-button google">
                        <img src="https://img.icons8.com/color/48/000000/google-logo.png" alt="Google icon" />
                        Google
                    </button>
                    <button class="social-button facebook">
                        <img src="https://img.icons8.com/color/48/000000/facebook-new.png" alt="Facebook icon" />
                        Facebook
                    </button>
                </div>

                <p class="signup-text">Hesabınız yok mu? <a href="#" class="signup-link">Kaydolun</a></p>
            </div>
            <div class="image-section">
            </div>
        </div>
    </div>
    </div>
    <script src="@Url.Content("~/website/script.js")"></script>
</body>
</html>